package com.adobe.washuhci.interactivehist.timeline {	
	import flash.display.Sprite;
	import flash.text.TextField;		public class TimelineMarker extends Sprite {				private var _time:Number;		private var _text:String;		private var _textField:TextField;				public function TimelineMarker() {			super();			_textField = new TextField();						init();		}				public function init():void {			// add text format here			this.addChild(_textField);		}				// getters/setters				public function get time():Number {			return _time;		}		public function set time(value:Number):void {			_time = value;		}				public function get text():String {			return _text;		}		public function set text(value:String):void {			_text = value;			_textField.text = _text;		}			}	}